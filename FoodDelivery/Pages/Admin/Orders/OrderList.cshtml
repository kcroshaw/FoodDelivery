@page
@model FoodDelivery.Pages.Admin.Orders.OrderListModel
@{
    ViewData["Title"] = "OrderList";
}

@{
    var status = HttpContext.Request.Query["status"];
    var cancelled = "text-primary";
    var delivered = "text-primary";
    var ready = "text-primary";

    if (status == "cancelled")
    {
        cancelled = "active text-white";
    }
    else
    {
        if (status == "delivered")
        {
            delivered = "active text-white";
        }
        else
        {
            ready = "active text-white";
        }
    }

}


<div class="border backgroundWhite container">
    <div class="d-flex justify-content-between mb-3">
        <div class="p-2">
            <h2 class="text-primary">Orders List</h2>
        </div>
        <div class="p-2">
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none;" asp-page="OrderList" asp-route-status="cancelled">
                    <li class="list-group-item @cancelled"> Cancelled </li>
                </a>
                <a style="text-decoration:none;" asp-page="OrderList" asp-route-status="delivered">
                    <li class="list-group-item @delivered"> Delivered </li>
                </a>
                <a style="text-decoration:none;" asp-page="OrderList" asp-route-status="ready">
                    <li class="list-group-item @ready"> Ready </li>
                </a>
            </ul>
        </div>
    </div>
    <br /><br />
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Name</th>

                <th>Email</th>
                <th>Order Total</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/orderList.js"></script>
}

