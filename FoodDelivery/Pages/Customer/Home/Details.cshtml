@page
@model FoodDelivery.Pages.Customer.Home.DetailsModel
@{ ViewData["Title"] = "Details"; }


<div class="">
    <form method="post">
        <input asp-for="ShoppingCartObj.MenuItemId" hidden />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="ShoppingCartObj.ApplicationUserId" hidden />
        
        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header bg-light text-light ml-0 row container">
                    <div class="col-12 col-md-6">
                        <h1 class="text-primary">@Model.ShoppingCartObj.MenuItem.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-md-end">
                        <h1 class="text-primary"> @((Model.ShoppingCartObj.MenuItem.Price).ToString("c"))</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">

                                    <div class="col-12">
                                        <span class="badge bg-warning h3">@Model.ShoppingCartObj.MenuItem.Category.Name</span>
                                        <span class="badge bg-dark">@Model.ShoppingCartObj.MenuItem.FoodType.Name</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.ShoppingCartObj.MenuItem.Description)</p>

                                        <div class="row py-4">
                                            <div class="col-2"><label asp-for="ShoppingCartObj.Count" class="h3"></label></div>
                                            <div class="col-2">
                                                <input type="number" min="1" value="1" asp-for="ShoppingCartObj.Count" class="form-control rounded" />
                                               
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.ShoppingCartObj.MenuItem.Image" style="width:100%" class="rounded" />
                            </div>


                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-page="Index" class="btn btn-success btn-square form-control btn-lg" style="height:50px;">Back to List</a>
                        </div>
                       
            <div class="col-12 col-md-6 ">
                <button type="submit" class="btn btn-primary btn-square form-control btn-lg" style="height:50px;">Add to Cart</button>
            </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}